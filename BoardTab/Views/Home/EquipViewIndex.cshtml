                </tr>
                <tr id="tr_modulebcustomer">

                    @*@foreach (var value in ViewBag.ModuleBCustomer)
                        {
                        <td style="font-weight:bold">客户</td>

                        <td colspan=2 style="text-align:left !Important">@value</td>
                        }*@
                </tr>
                <tr>
