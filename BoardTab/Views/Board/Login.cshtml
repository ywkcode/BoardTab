@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
<link href="~/css/login.css" rel="stylesheet" />
<style type="text/css">
    .layui-btn {
        width: 40% !important;
    }
</style>
}
<div class="login" >
    <form asp-controller="Board" asp-action="SysLogin" method="post" data-ajax="true" data-ajax-success="afterSuccess">
        <div style=" text-align: center;">
               <img src="~/images/logo.png" style="width:50px;height:50px;display:inline-block" />
               <h1 style="display:inline-block">大屏显示软件</h1>
        </div>
      
        <div class="layui-form-item">
            <input type="text" name="username" class="layui-input" placeholder="用户名" />

        </div>
        <div class="layui-form-item">
            <input type="password" name="Password" class="layui-input" placeholder="密码" />
        </div>
        <div class="layui-row" style="text-align:center">
            <button type="submit" class="layui-btn login_btn" Tex="登陆" style="text-align:center;">登陆</button>
        </div>

    </form>
    
  
    @section Scripts{
    <script type="text/javascript">
        function afterSuccess(data)
        {
           console.log(data);
            if (data.status == true) {
                 window.location.href = '@Url.Action("Index","Board")';
            }

            else {
                layer.msg("用户名或密码错误！");
            }

        }

    </script>
    }


</div>
